{
    "extends": "tsconfig/base.json",
    "compilerOptions": {
        "baseUrl": ".",
        "paths": {
            "~/.source": ["./.source/index.ts"],
            "~/*": ["./app/*"],
            "~/hooks/*": ["./hooks/*"],
            "~/config/*": ["./config/*"],
            "~/components/*": ["./components/*"],
            "~/lib/*": ["./lib/*"],
            "~/envs": ["./envs.ts"]
        },
        "plugins": [
            {
                "name": "next"
            }
        ],
        "tsBuildInfoFile": "node_modules/.cache/tsbuildinfo.json"
    },
    "include": [
        "next-env.d.ts",
        "i18next.d.ts",
        "**/*.ts",
        "**/*.tsx",
        "*.mjs",
        ".next/types/**/*.ts",
        "*.ts",
        "*.tsx",
        "./config/**/*.ts",
        "components/**/*",
        "lib/**/*.ts",
        "app"
    ],
    "exclude": [".cache", ".next", ".turbo", "build", "dist", "node_modules"]
}
